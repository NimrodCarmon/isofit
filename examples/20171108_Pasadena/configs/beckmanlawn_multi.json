{
  "ISOFIT_BASE": "../../..",

  "input": {
    "measured_radiance_file": "../remote/Shadowed_multipx_grass.txt",
    "reference_reflectance_file": "../insitu/BeckmanLawn.txt"
  },

  "output": {
    "estimated_reflectance_file": "../output/shaded_grass.txt",
    "data_dump_file": "../output/dump.mat",
    "algebraic_inverse_file": "../output/ang20171108t184227_alg_v2p11_BeckmanLawn.txt",
    "modeled_radiance_file":  "../output/ang20171108t184227_mdl_v2p11_BeckmanLawn.txt",
    "posterior_uncertainty_file":  "../output/ang20171108t184227_uncert_v2p11_BeckmanLawn.txt",
    "plot_directory": "../images/",
    "plot_surface_components": True
  },

  "forward_model":{

    "instrument": {
      "wavelength_file": "../remote/20170320_ang20170228_wavelength_fit.txt",
      "parametric_noise_file": "../../../data/avirisng_noise.txt",
      "integrations":8,
      "unknowns": {
        "channelized_radiometric_uncertainty_file": 
          "../../../data/avirisng_systematic_error.txt",
        "uncorrelated_radiometric_uncertainty": 0.01
      }
    },

    "surface": {
      "surface_category": "intimate_surface",
      "surface_file": "../remote/ang20170228_surface_model.mat"
    },

    "radiative_transfer": {
      "statevector": {
        "H2OSTR": {
          "bounds": [0.5, 3.0],
          "scale": 0.01,
          "prior_mean": 1.15,
          "prior_sigma":0.05,
          "init": 1.15
        },
        "AOT550": {
          "bounds": [0.01, 0.2],
          "scale": 0.05,
          "prior_mean": 0.08,
          "prior_sigma":0.005,
          "init": 0.08
        },
        "Shadow_fraction": {
          "bounds": [0.01, 1],
          "scale": 0.1,
          "prior_mean": 0.1,
          "prior_sigma":0.1,
          "init": 0.1
        },
        "Sky_View_Factor": {
          "bounds": [0.25, 1],
          "scale": 1.0,
          "prior_mean": 0.5,
          "prior_sigma":1.0,
          "init": 0.1
        }
      },
      "lut_grid": {
        "H2OSTR": [0.5, 1.5],
        "AOT550": [0.01, 0.1, 0.2],
        "Shadow_fraction": [0.01, 0.25, 0.5, 0.75, 0.99]
        
      },
      "unknowns": {
        "H2O_ABSCO": 0.01
      },
      "radiative_transfer_engines": {
        "vswir": {
          "engine_name": "modtran_multi",
          "wavelength_range":[370,2505],
          "lut_path": "../lut_multi2/",
          "template_file": "multi_modtran_template.json",
          "lut_names": ["H2OSTR", "AOT550" ]
        }
      }
    }
  },

  "implementation": {
    "n_cores": 6,
    "rte_auto_rebuild": True,
    "inversion": {
      "integration_grid":{"Shadow_fraction": [0.02, 0.1]},
      "inversion_grid_as_preseed": 1,
      "windows": [[380.0, 1300.0], [1450, 1780.0], [1950.0, 2450.0]]
    }
  }
}
